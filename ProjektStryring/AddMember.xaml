<Window x:Class="ProjektStryring.AddMember"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektStryring"
        mc:Ignorable="d"
        Title="AddMember" Height="450" Width="250">
    <Grid>
        <ListBox x:Name="PersonList" HorizontalAlignment="Left" Height="344" Margin="10,10,0,0" VerticalAlignment="Top" Width="222" SelectionMode="Multiple"/>
        <Button Content="Tilføj person" HorizontalAlignment="Left" Margin="10,359,0,0" VerticalAlignment="Top" Width="222" Height="50" Click="AddMemberToGroup">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border" CornerRadius="20" BorderThickness="1" BorderBrush="LightGray" Background="LimeGreen">
                        <ContentPresenter Margin="15,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Window>
